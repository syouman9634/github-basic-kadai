package kadai_15;

public class Car_Chapter15 {
	
	private int gear = 1;
	private int speed = 10;
	
	public void gearChange(int afterGear)
	{
		if(afterGear>0 && afterGear<6)
		{
			speed = afterGear*10;
		}
		else
		{
			speed = 10;
		}
		gear = afterGear;
	}
	
	public void run()
	{
		System.out.println("ギアが"+gear+"の際の速度は時速"+speed+"kmです");
	}

}
